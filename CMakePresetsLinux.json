{
  "version": 8,
  "configurePresets": [
    {
      "name": "linux-gcc-release",
      "displayName": "Linux GCC Release",
      "description": "Build with GCC and Ninja (Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-gcc-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++"
      }
    },
    {
      "name": "linux-gcc-debug",
      "displayName": "Linux GCC Debug",
      "description": "Build with GCC and Ninja (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-gcc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_C_COMPILER": "/usr/bin/gcc",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++"
      }
    },
    {
      "name": "linux-clang-release",
      "displayName": "Linux Clang Release",
      "description": "Build with Clang and Ninja (Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux-clang-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-gcc-release-build",
      "displayName": "Linux GCC Release Build",
      "configurePreset": "linux-gcc-release"
    },
    {
      "name": "linux-gcc-debug-build",
      "displayName": "Linux GCC Debug Build",
      "configurePreset": "linux-gcc-debug"
    },
    {
      "name": "linux-clang-release-build",
      "displayName": "Linux Clang Release Build",
      "configurePreset": "linux-clang-release"
    }
  ]
}
